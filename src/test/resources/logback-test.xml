<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <!-- 테스트 실행 시 파일 저장 위치: 프로젝트 루트/was-logs -->
  <property name="LOG_ROOT" value="${user.dir}/was-logs"/>

  <!-- 콘솔 출력(테스트 콘솔에 깔끔히 표시) -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>[%d{yyyy-MM-dd HH:mm:ss}][TEST] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- 테스트용 파일 저장(앱 로그만 기록) -->
  <appender name="TEST_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_ROOT}/test-db-summary.txt</file>
    <encoder>
      <pattern>[%d{yyyy-MM-dd HH:mm:ss}][TEST] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>${LOG_ROOT}/test-db-summary.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
      <maxFileSize>5MB</maxFileSize>
      <maxHistory>7</maxHistory>
      <totalSizeCap>1GB</totalSizeCap>
    </rollingPolicy>
  </appender>

  <!-- 우리 코드 로그: 콘솔 + 파일, 프레임워크 로그는 섞이지 않게 additivity=false -->
  <logger name="kr.co.dreamstart" level="INFO" additivity="false">
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="TEST_FILE"/>
  </logger>

  <!-- 프레임워크 시끄러운 로그 억제(콘솔엔 WARN 이상만) -->
  <logger name="org.springframework" level="WARN"/>
  <logger name="org.mybatis" level="WARN"/>
  <logger name="org.apache.ibatis" level="WARN"/>

  <!-- 루트는 최소한으로(콘솔 WARN 이상만) -->
  <root level="WARN">
    <appender-ref ref="STDOUT"/>
  </root>

</configuration>
