<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.dreamstart.mapper.ReservationMapper">

	<resultMap type="ReservationDTO" id="reservationMap">
		<id column="reservation_id" property="reservationId" />
		<result column="user_type" property="userType" />
		<result column="user_id" property="userId" />
		<result column="event_id" property="eventId" />
		<result column="reservation_date" property="reservationDate" />
		<result column="status" property="status" />
		<result column="qr_code" property="qrCode" />
		<result column="headcount" property="headCount" />
		<result column="cancel_reason" property="cancelReason" />
		<result column="cancelled_at" property="cancelledAt" />
	</resultMap>



	<select id="list" resultMap="reservationMap">
		select * from
		`reservation`
		order by
		`reservation_date`
		limit
		#{cri.pageStart},#{cri.perPageNum}
	</select>

	<select id="select" resultType="reservationDTO">
		select * from reservation
		where
		reservation_id = #{reservationId}
	</select>

	<insert id="insert" parameterType="ReservationDTO">
		INSERT INTO `reservation`
		(`reservation_id`,`user_id`,
		`event_id`,
		`reservation_date`,
		`status`,
		`headcount`
		)
		VALUES
		(#{reservationId},#{userId},
		#{eventId},
		NOW(),                  <!-- 예약 시간 자동 저장 -->
		'CONFIRMED',              <!-- PENDING / CONFIRMED / CANCELLED -->
		#{headCount})
	</insert>





</mapper>
